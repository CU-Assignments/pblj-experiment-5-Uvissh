import java.util.ArrayList;
import java.util.List;

public class SumUsingAutoboxingUnboxing {
    public static void main(String[] args) {
        // Creating a list of integers (using autoboxing)
        List<Integer> numbers = new ArrayList<>();
        
        // Adding numbers to the list using autoboxing
        numbers.add(10);
        numbers.add(20);
        numbers.add(30);
        numbers.add(40);
        
        // Calculating the sum using unboxing
        int sum = 0;
        for (Integer number : numbers) {
            sum += number;  // Unboxing occurs here
        }
        
        // Output the result
        System.out.println("Sum of the list: " + sum);
        
        // Demonstrating parsing a string to Integer
        String str = "50";
        Integer parsedNumber = Integer.parseInt(str);
        System.out.println("Parsed Integer from String: " + parsedNumber);
    }
}

